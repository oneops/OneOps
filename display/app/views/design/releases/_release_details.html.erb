<%= section_panel 'Release Details', :width => 'double', :position => 'right', :class_name => 'fixed' do %>
  <div class="release">
    <%= render 'cms/releases/edit', :release => release %>
    <%= render 'base/release/release_diff_list',
               :rfc_cis => release.rfc_cis,
               :rfc_relations => release.rfc_relations,
               :owner        => 'design' %>
    <% if release.releaseState == 'open' && current_user.has_design?(@assembly.ciId) %>
      <ul class="status-actions">
        <%= render 'design/releases/controls' %>
      </ul>
    <% end %>
  </div>
<% end %>
