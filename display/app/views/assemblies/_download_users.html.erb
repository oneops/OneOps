<%= section_panel 'User List', :width => 'single', :position => 'right' do %>
  <p>
      <span class="help-block">
      Download full list of users with access to this assembly including their
      DTO (design, transtion, operations) permissions and team membership.
      </span>
  </p>
  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    <%= icon('download', 'Users') %> <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to('to YAML', users_assembly_path(@assembly, :format => :yaml), :target => '_blank') %></li>
    <li><%= link_to('to JSON', users_assembly_path(@assembly, :format => :json), :target => '_blank') %></li>
    <li><%= link_to('to CSV', users_assembly_path(@assembly, :format => :csv)) %></li>
  </ul>
<% end %>
