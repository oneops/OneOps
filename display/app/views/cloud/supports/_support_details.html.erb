<%= section_panel 'Support Details', :width => 'double', :position => 'right' do %>
  <%= render('base/shared/edit_form',
             {:resource   => @support,
              :content    => 'cms/cis/ci',
              :read_only  => !(has_cloud_support?(@cloud.ciId) && has_support_permission?(Cloud::SupportsController::SUPPORT_PERMISSION_CLOUD_SUPPORT_MANAGEMENT)),
              :cancel_url => cloud_supports_path(@cloud),
              :form_url   => @support.new_record? ? cloud_supports_path(@cloud) : cloud_support_path(@cloud, @support)}) %>
<% end %>
