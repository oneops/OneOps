<runtime>
  <archive name="${basedir}/target/${project.artifactId}-${project.version}.tar.gz"/>
  <fileSet to="/">
     <directory path="${basedir}">
       <include>**</include>
       <exclude>packer/**</exclude>
       <exclude>src/**</exclude>
       <exclude>.git/**</exclude>
       <exclude>target/**</exclude>
       <exclude>pom.xml</exclude>
       <exclude>.bundle/**</exclude>
       <exclude>~/**</exclude>
     </directory>
   </fileSet>
</runtime>
